<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shapes"
    android:padding="@dimen/widget_margin"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/wo_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/wo_seek_bar_margin"
            android:text="@string/wd_text_def"
            android:textColor="@color/text_color" />

        <ProgressBar
            android:id="@+id/day_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wo_progress_text"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/wo_seek_bar_margin"
            android:layout_marginRight="@dimen/wo_seek_bar_margin"
            android:layout_marginBottom="@dimen/wo_seek_bar_margin"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />

    </RelativeLayout>

</RelativeLayout>